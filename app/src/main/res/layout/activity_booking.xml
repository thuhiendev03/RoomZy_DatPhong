<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".BookingActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/nestedScroll"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Main Image Banner -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/bannerImage"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/item_img_bg" />
            </androidx.cardview.widget.CardView>

            <!-- Hotel Name and Price -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="16dp">

                <TextView
                    android:id="@+id/hotelName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/helvetica_bold"
                    android:text="Cozrum Homes Premier Residences"
                    android:textColor="@color/GlacierBlueColor"
                    android:textSize="24sp"
                    android:paddingEnd="8dp"
                    android:ellipsize="end"
                    android:maxLines="2" />

                <TextView
                    android:id="@+id/roomPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/helvetica_bold"
                    android:text="200.000 đ"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:gravity="end"/>
            </LinearLayout>

            <!-- Date Picker -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Check-in Date:"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:fontFamily="@font/helvetica_bold" />

                <TextView
                    android:id="@+id/txtCheckin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/edittext_bg"
                    android:padding="8dp"
                    android:textColor="#797979"
                    android:hint="Check-in"
                    android:gravity="center_vertical"/>

                <Button
                    android:id="@+id/checkInDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_bg"
                    android:paddingHorizontal="16dp"
                    android:text="Select Date"
                    android:textColor="#ffffff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Check-out Date:"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:fontFamily="@font/helvetica_bold" />

                <TextView
                    android:id="@+id/txtCheckout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/edittext_bg"
                    android:padding="8dp"
                    android:textColor="#797979"
                    android:hint="Check-out"
                    android:gravity="center_vertical"/>

                <Button
                    android:id="@+id/checkOutDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_bg"
                    android:paddingHorizontal="16dp"
                    android:text="Select Date"
                    android:textColor="#ffffff" />
            </LinearLayout>

            <!-- Voucher Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:background="@drawable/report_bg"
                android:layout_marginBottom="16dp">

                <!-- Voucher Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mã giảm giá"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:fontFamily="@font/helvetica_bold"
                    android:layout_marginBottom="8dp"/>

                <!-- Voucher Spinner and Apply Button -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/selectedVoucherTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No voucher selected"
                        android:layout_weight="1"
                   />
                                        <Button
                                            android:id="@+id/selectVoucherButton"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/button_bg"
                                            android:paddingHorizontal="16dp"
                                            android:text="Áp dụng"
                                            android:textColor="#ffffff" />
                </LinearLayout>
            </LinearLayout>

            <!-- Booking Details -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/report_bg"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tổng số ngày đặt:"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:fontFamily="@font/helvetica_bold"/>

                    <TextView
                        android:id="@+id/txtSoNgay"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="0"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:fontFamily="@font/helvetica_bold"
                        android:gravity="end"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giảm giá:"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:fontFamily="@font/helvetica_bold"/>

                    <TextView
                        android:id="@+id/txtGiamGia"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="-0 đ"
                        android:textColor="#E4292929"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textSize="16sp"
                        android:fontFamily="@font/helvetica_bold"
                        android:gravity="end"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tổng thanh toán:"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:fontFamily="@font/helvetica_bold"/>

                    <TextView
                        android:id="@+id/txtTotalPayment"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="200.000 đ"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:fontFamily="@font/helvetica_bold"
                        android:gravity="end"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giá đã bao gồm 8% thuế và 5% phí dịch vụ."
                    android:textColor="#A6A3A3"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:padding="5dp"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chúng tôi cam đoan những gì đã cung cấp là đúng sự thật nhằm mang đến trải nhiệm tốt nhất cho khách hàng."
                    android:textColor="#A6A3A3"
                    android:textSize="12sp"
                    android:padding="5dp"
                    />
            </LinearLayout>

            <!-- Book Now Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/bookNowButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Đặt ngay"
                    android:background="@drawable/button_bg"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/helvetica_bold" />

                <Button
                    android:id="@+id/contactButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_bg"
                    android:fontFamily="@font/helvetica_bold"
                    android:text="Liên hệ"
                    android:textColor="#ffffff" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
