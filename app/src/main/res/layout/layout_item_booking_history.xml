<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="1dp"
        app:cardCornerRadius="10dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/roomImage"
                android:layout_width="130dp"
                android:layout_height="125dp"
                android:scaleType="centerCrop"
                android:src="@drawable/item_img_bg"
                android:contentDescription="Ảnh"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:padding="10dp">

                <TextView
                    android:id="@+id/roomName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Room Name"
                    android:fontFamily="@font/helvetica_bold"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/roomPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="200.000 vnđ"
                    android:fontFamily="@font/helvetica_bold"
                    android:textColor="#FF9800"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/roomStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status: Confirmed"
                    android:fontFamily="@font/helvetica_bold"
                    android:textColor="#008000"
                    android:textSize="14sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="end">

                    <TextView
                        android:id="@+id/checkInDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Check-in: 01/01/2023"
                        android:textSize="14sp"
                        android:textColor="#000"
                        android:layout_marginEnd="16dp"
                        android:fontFamily="@font/helvetica_bold"/>

                    <TextView
                        android:id="@+id/checkOutDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Check-out: 05/01/2023"
                        android:textSize="14sp"
                        android:textColor="#000"
                        android:fontFamily="@font/helvetica_bold"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
